{% extends 'base.html.twig' %}
{% block titulo %}Mis Tickets{% endblock %}
{% block menu_mis_tickets %}class="active"{% endblock %}
{% block body %}
    <h1 class="alinear_izquierda">MIS TICKETS</h1>
    <table class="table table-condensed table-hover table-responsive table-striped" style="text-align: left;">
        <thead>
        <tr>
            <th>#</th>
            <th>Fecha</th>
            <th>Usuario</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        {% for ticket in tickets  %}
            <tr>
                <td>{{ ticket.id }}</td>
                <td>{{ ticket.fechaCreado|date("m/d/Y H:i:s") }}</td>
                <td>{{ ticket.usuario }}</td>
                <td>{{ ticket.estado }}</td>
                <td>
                    <a href="{{ 'ver_ticket/' }}{{ticket.id}}" class="btn btn-success"><span class="glyphicon glyphicon-eye-open"></span>&Tab;VER</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}


